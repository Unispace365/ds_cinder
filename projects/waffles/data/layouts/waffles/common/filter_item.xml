<interface>
	<settings>
		<setting name="icon_src" value="%APP%/data/images/waffles/icons/2x/Menu_128.png" />
		<setting name="label" value="AHHHHH" />
		<setting name="has_arrow" value="false" />
	</settings>


	<layout name="layout"
		layout_type="horiz"
		enable="true"
		multitouch="info"
		size="$_filter_list:item:width, $_filter_list:item:height"
	>
			
		<layout_button name="the_btn"
			layout_type="horiz"
			enable="false"
			size="$_filter_list:item:width, $_filter_list:item:height"
			padding="#expr{ 20 * $_waffles:sprite:scale }, #expr{ 0 * $_waffles:sprite:scale }, #expr{ 20 * $_waffles:sprite:scale }, #expr{ 0 * $_waffles:sprite:scale }"
		>
			
			<layout name="normal_layout"
				attach_state="normal"
				layout_size_mode="fill"
				skip_hidden_children="true"
				layout_type="horiz"
			>
				<sprite name="background_highlight"
					layout_size_mode="fill"
					transparent="false"
					color="waffles:button:bg:normal:dark"
					opacity="1.0"
					corner_radius="#expr{ 10.0 * $_waffles:sprite:scale }"
				/>

				<image name="icon"
					pad_all="$_ui:padding"
					layout_size="#expr{ 45 * $_waffles:sprite:scale }, #expr{ 45 * $_waffles:sprite:scale }"
					center="0.5, 0.5"
					layout_h_align="center"
					layout_v_align="middle"
					l_pad="#expr{1 * $_ui:padding * $_waffles:sprite:scale}"
					r_pad="#expr{1 * $_ui:padding * $_waffles:sprite:scale}"
					src_c_m="$_icon_src"
					color="waffles:button:text:normal:dark"
				/>

				<text name="name"
					font="viewer:body"
					color="waffles:button:text:normal:dark"
					layout_v_align="middle"
					text_ellipses="end"
					text_wrap="off"
					layout_size_mode="stretch"
					layout_fudge="$_ui:text_fudge"
					text="$_label"
				/>
				
			</layout>

			<layout name="high_layout"
				attach_state="high"
				layout_size_mode="fill"
				skip_hidden_children="true"
				layout_type="horiz"
			>
				<sprite name="background_highlight_high"
					layout_size_mode="fill"
					transparent="false"
					color="waffles:button:bg:high:dark"
					opacity="1.0"
					corner_radius="#expr{ 10.0 * $_waffles:sprite:scale }"
				/>

				<image name="icon_high"
					pad_all="$_ui:padding"
					layout_size="#expr{ 45 * $_waffles:sprite:scale }, #expr{ 45 * $_waffles:sprite:scale }"
					center="0.5, 0.5"
					layout_h_align="center"
					layout_v_align="middle"
					l_pad="#expr{1 * $_ui:padding}"
					r_pad="#expr{1 * $_ui:padding}"
					src_c_m="$_icon_src"
					color="waffles:button:text:high:dark"
				/>

				<text name="name_high"
					font="viewer:body"
					font_size="#expr{ 20 * $_waffles:sprite:scale }"
					color="waffles:button:text:high:dark"
					layout_v_align="middle"
					text_ellipses="end"
					text_wrap="off"
					layout_size_mode="stretch"
					layout_fudge="$_ui:text_fudge"
					text="$_label"
				/>
				
			</layout>
			
		</layout_button>
	
	</layout>

</interface>

