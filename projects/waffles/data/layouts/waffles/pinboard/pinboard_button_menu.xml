<interface>
	<layout name="root_layout"
		size="$_ui:button_size, $_ui:button_size"
		layout_type="vert"
	>

		<layout_button name="the_button"
			size="$_ui:button_size, $_ui:button_size"
			layout_type="size"
			animate_on="$_animation:item_on"
		>

			<shadow_layout name="norm_shade"
				layout_type="vert"
				layout_size_mode="fill"
				shadow_size="8"
				shadow_sigma="5"
				shadow_color="black"
				shadow_opacity="0.4"
				shadow_offset="-2.0, 2.0"
				shadow_iterations="5"
				attach_state="normal"
				shadow_every_frame="true"
			>

				<layout name="icons_normal"
					layout_type="vert"
					layout_size_mode="fill"
					overall_alignment="center"
					attach_state="normal"
				>
					<sprite name="normal_background"
						layout_size_mode="fill"
						color="ui_background"
						corner_radius="$_ui:corner_radius"
						r_pad="#expr -1.0 * $_ui:corner_radius"
					/>
					<image
						name="icon_normal"
						src_cache="%APP%/data/images/waffles/icons/1x/Pin_64.png"
						layout_h_align="center"
						layout_size_mode="fill"
						color="ui_normal"
						pad_all="$_ui:padding"
					/>
					<image
						name="icon_filled"
						src_cache="%APP%/data/images/waffles/icons/1x/Pinned_64.png"
						layout_h_align="center"
						layout_size_mode="fill"
						color="ui_normal"
						visible="false"
						pad_all="$_ui:padding"
					/>
					<image
						name="spinner"
						src_c_m="%APP%/data/images/waffles/icons/1x/Redo_64.png"
						layout_h_align="center"
						center="0.5, 0.5"
						layout_size_mode="fill"
						color="ui_normal"
						visible="false"
						pad_all="$_ui:padding"
					/>
				</layout>
			</shadow_layout>

			<layout name="icons_high"
				layout_type="vert"
				layout_size_mode="fill"
				overall_alignment="center"
				attach_state="high"
			>
				<sprite name="high_background"
					layout_size_mode="fill"
					color="ui_highlight"
					corner_radius="$_ui:corner_radius"
					r_pad="#expr -1.0 * $_ui:corner_radius"
				/>
				<image
					name="icon_high"
					src_cache="%APP%/data/images/waffles/icons/1x/Pin_64.png"
					layout_h_align="center"
					layout_size_mode="fill"
					color="white"
					pad_all="$_ui:padding"
				/>
				<image
					name="icon_filled_high"
					src_c_m="%APP%/data/images/waffles/icons/1x/Pinned_64.png"
					layout_h_align="center"
					layout_size_mode="fill"
					color="white"
					visible="false"
					pad_all="$_ui:padding"
				/>
				<image
					name="spinner_high"
					src_c_m="%APP%/data/images/waffles/icons/1x/Redo_64.png"
					layout_h_align="center"
					center="0.5, 0.5"
					layout_size_mode="fill"
					color="white"
					visible="false"
					pad_all="$_ui:padding"
				/>
			</layout>
		</layout_button>
	</layout>


</interface>

