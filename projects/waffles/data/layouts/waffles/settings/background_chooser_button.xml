<interface>

	<layout_button name="the_button" 
		layout_type="vert"
		size="250, 140"
		center="0.5, 0.5"
		animate_on="$_animation:item_on"
		overall_alignment="center"
		>
		
		<layout name="normal sprites"
			layout_size_mode="fill"
			layout_type="vert"
			overall_alignment="middle"
			attach_state="normal"
			layout_spacing="#expr{ 0.5 * $_ui:padding }"
			>
		
			<sprite name="background_normal"
				layout_size_mode="fill"
				color="ui_background"
				corner_radius="$_ui:corner_radius"
				animate_on="$_animation:fade_on"
				/>
			<image name="icon_normal"
				layout_h_align="center"
				color="ui_normal"
				center="0.5, 0.5"
				animate_on="$_animation:item_on"
				/>
			<text name="label_normal"
				layout_size_mode="flex"
				pad_all="$_ui:padding"
				center="0.5, 0.0"
				font="viewer:tiny"
				color="ui_normal"
				text_align="center"
				animate_on="$_animation:item_on"
				layout_fudge="$_ui:text_fudge"
				/>
		</layout>
			
		
		
		<layout name="high sprites"
			layout_size_mode="fill"
			layout_type="vert"
			overall_alignment="middle"
			attach_state="high"
			layout_spacing="#expr{ 0.5 * $_ui:padding }"
			>
		
			<sprite name="background_high"
				layout_size_mode="fill"
				color="ui_highlight"
				corner_radius="$_ui:corner_radius"
				/>
			<image name="icon_high"
				layout_h_align="center"
				color="ui_white"
				center="0.5, 0.5"
				/>
			<text name="label_high"
				layout_size_mode="flex"
				pad_all="$_ui:padding"
				center="0.5, 0.0"
				font="viewer:tiny"
				color="ui_white"
				text_align="center"
				/>
		</layout>
	</layout_button>
		
</interface>

