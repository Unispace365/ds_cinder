<interface>

		<layout name="layout"
				layout_type="vert"
				layout_size_mode="flex"
				shrink_to_children="true"
				layout_spacing="#expr{ 1.0 * $_ui:padding }"
			>
			
			<text name="title"
				font="viewer:subtitle"
				color="ui_normal"
				layout_v_align="middle"
				layout_size_mode="flex"
				animate_on="$_animation:item_on"
				text="Ambient"
				/>
					
			
			<layout name="buttons"
				layout_type="horiz"
				layout_size_mode="flex"
				layout_spacing="$_ui:padding"
				shrink_to_children="true"
				>
				
			<xml name="toggle" src="%APP%/data/layouts/waffles/settings/background_chooser_button.xml" >
					<property name="the_button"  />
					<property name="icon_normal" src="%APP%/data/images/waffles/icons/1x/Ambient_text_64.png" />
					<property name="icon_high" src="%APP%/data/images/waffles/icons/1x/Ambient_text_64.png"  />
					<property name="label_normal" text="Title and Date" />
					<property name="label_high" text="Title and Date" />
				</xml>
				
			<!--
				<xml name="default_image" src="%APP%/data/layouts/waffles/background_chooser_button.xml" >
