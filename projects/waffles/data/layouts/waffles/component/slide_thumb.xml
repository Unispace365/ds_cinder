<interface>
	<layout name="root"
		layout_type="vert"
		size="$_presentation_controller:slides_thumb:size"
		enable="true"
	>
		<layout layout_size_mode="fill"
			padding="#expr{ 4 * $_waffles:sprite:scale }"
			overall_alignment="middle"
		>
			<sprite name="bg"
				layout_size_mode="fill"
				color="waffles:button:bg:normal:dark"
				corner_radius="#expr{ 10.0 * $_waffles:sprite:scale }"
			/>

			<text name="label"
				layout_size="#expr{ 150.0 * $_waffles:sprite:scale }, #expr{ 130 * $_waffles:sprite:scale }"
				layout_size_mode="flex"
				layout_h_align="center"
				font="waffles:presentation_controller:slide_thumb:label"
				font_size="#expr{ 16 * $_waffles:font:scale }"
				text_align="center"
				text_wrap="word"
				text_ellipses="end"
				resize_limit="#expr{ 150 * $_waffles:sprite:scale }, #expr{ 130 * $_waffles:sprite:scale }"
				color="corporate_blue"
				model="text:this->record_name"
				padding="#expr{ 4 * $_waffles:sprite:scale }"
			/>

		</layout>
	</layout>
</interface>
